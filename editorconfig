# top-most EditorConfig file
root = true

# Global Styling
[*]
indent_size = 2
indent_style = tab
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true


# HTML files
[*.html]
trim_trailing_whitespace = true
insert_final_newline = true


# Ignore formatting for files with a .css extension
[*.css]
indent_size = unset
indent_style = tab
trim_trailing_whitespace = true
indent_size = 2

# Set the default indent style and size for JavaScript and TypeScript files
[*.js]
indent_style = space
indent_size = 2

[*.ts]
indent_style = space
indent_size = 2

[package.json]
indent_style = space
indent_size = 2


# Additional files or patterns to exclude
# For example, if you have JSX files with inline CSS
[src/**/*.jsx]
indent_size = unset

[*.md]
trim_trailing_whitespace = false

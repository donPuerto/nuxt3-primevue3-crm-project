# top-most EditorConfig file
root = true

# Global Styling
[*]
indent_style = tab
trim_trailing_whitespace = true
indent_size = 2

# Ignore formatting for files with a .css extension
[*.css]
indent_size = unset
indent_style = tab
trim_trailing_whitespace = true
indent_size = 2

# Set the default indent style and size for JavaScript and TypeScript files
[*.js]
indent_style = space
indent_size = 2

[*.ts]
indent_style = space
indent_size = 2

[package.json]
indent_style = space
indent_size = 2


# Additional files or patterns to exclude
# For example, if you have JSX files with inline CSS
[src/**/*.jsx]
indent_size = unset

